{
  "name": "@phyrus/vue-project",
  "version": "0.0.1",
  "scripts": {
    "serve": "vite --port 8080",
    "start": "vite --port 8080",
    "dev": "vite --port 8080 --mode dev",
    "prod": "vite --port 8080 --mode prod",
    "build": "vite build --mode prod",
    "build:dev": "vite build --mode dev",
    "generate": "vite build --mode prod",
    "lint": "vue-cli-service lint",
    "make:component": "node ./node_modules/@phyrus/vue/cli.js make:component",
    "make:page": "node ./node_modules/@phyrus/vue/cli.js make:page",
    "make:layout": "node ./node_modules/@phyrus/vue/cli.js make:layout",
    "svg:pack": "node ./node_modules/@phyrus/vue/cli.js svg:pack"
  },
  "dependencies": {
    "@phyrus/vue": "^0.0.4",
    "vue": "^3.3.4",
    "vue-facing-decorator": "^3.0.1",
    "vue-router": "^4.2.2"
  },
  "devDependencies": {
    "@types/vue": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "@vitejs/plugin-vue": "^4.3.4",
    "@vue/eslint-config-typescript": "^9.1.0",
    "eslint": "^7.32.0",
    "eslint-plugin-vue": "^8.0.3",
    "fs": "0.0.1-security",
    "path": "^0.12.7",
    "sass": "^1.63.6",
    "typescript": "^4.5.5",
    "vite": "^4.4.9"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended",
      "@vue/typescript"
    ],
    "parserOptions": {
      "parser": "@typescript-eslint/parser"
    },
    "rules": {
      "vue/multi-word-component-names": "off",
      "vue/no-mutating-props": "off",
      "no-useless-escape": "off"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ]
}
